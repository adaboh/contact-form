{
  "name": "php-contactform",
  "version": "1.0.0",
  "description": "A simple php backend forms",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "node-sass --watch src/sass -o src/css",
    "devServer": "live-server",
    "start": "npm-run-all --parallel devServer watch",
    "concat-css": "concat -o src/css/main.css src/css/lib.css src/css/main.css",
    "prefix-css": "postcss --use autoprefixer  -b /'last 10 versions'/ src/css/main.css -o src/css/prefix.css",
    "compress-css": "node-sass src/css/main.css docs/css/main.css --output-style compressed",
    "build-css": "npm-run-all concat-css compress-css",
    "copy-files": "cp src/index.html src/form.php docs/",
    "deploy": "npm-run-all build-css copy-files"
  },
  "author": "Kae",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^9.8.5",
    "concat": "^1.0.3",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.1"
  }
}
